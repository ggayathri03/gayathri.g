<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">
	
	<bean id="stud" class="spring1.Student">
	
	<property name="id" value="01"></property>
	<property name="name" value="Rohit"></property>
	<property name="dept" value="CSC"></property>
    <property name="rollno" value="1"></property>
	</bean>
    <bean id="stud1" class="spring1.Student">
    <constructor-arg name="id" value="02"></constructor-arg>
    <constructor-arg name="name" value="Kohli"></constructor-arg>
    <constructor-arg name="dept" value="ECE"></constructor-arg>
    <constructor-arg name="rollno" value="2"></constructor-arg>
    </bean>
</beans>
